{
	"compilerOptions": {
		"outDir": "lib",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"strict": false,
		"jsx": "preserve",
		"types": ["vite/client"],
		"baseUrl": ".",
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "lib",
		"emitDeclarationOnly": true,
		"paths": {
			"@theme/*": [".vitepress/theme/*"],
			"@/lib/*": ["lib/*"],
			"@/packages/*": ["packages/*"],
			"@/docs/*": ["docs/*"]
		}
	},
	"include": ["packages/**/*"],
	"exclude": ["node_modules/**/*"]
}
